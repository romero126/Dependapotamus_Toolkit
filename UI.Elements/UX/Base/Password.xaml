<UserControl x:Class="UI.Elements.UX.Password"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid
		Margin="5,5,5,5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="2*" />
			<ColumnDefinition
				Width="1*" />
			<ColumnDefinition
				Width="2*" />
		</Grid.ColumnDefinitions>
		<Grid
			Grid.Column="0">
			<Label
				x:Name="Label"
				FontFamily="Segoe UI"
				FontSize="15"
				Foreground="Black"
				VerticalAlignment="Center"
				HorizontalAlignment="Left"
				Content="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
				RenderTransformOrigin="0.5,0.5" />
		</Grid>
		<Grid
			Grid.Row="0"
			Grid.Column="2">
			<Border
				Background="MediumSlateBlue"
				CornerRadius="5,5,5,5"
				Padding="4">
				<PasswordBox
					x:Name="Pass"
					FontFamily="Segoe UI"
					FontSize="12"
					BorderBrush="Transparent"
					Background="MediumSlateBlue"
					PasswordChar="*"
					HorizontalContentAlignment="Center"
					SelectionBrush="DarkSlateBlue"
					KeyUp="Pass_KeyUp" />
			</Border>
		</Grid>
	</Grid>
</UserControl>