<UserControl x:Class="UI.Body.PWKeeper.Main"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	
	xmlns:Controls="clr-namespace:UI.Body.PWKeeper.UX.Control"
    xmlns:UXSettings="clr-namespace:UI.Body.PWKeeper.UX.Settings"
	Loaded="UserControl_Loaded"
	>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="100" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid Grid.Row="0" Background="Black">
			
		</Grid>
		
		<Grid Grid.Row="1" Margin="20">
			
			<Border Name="border" CornerRadius="5,5,5,5" Background="Black">
				<Grid>
						<Controls:DatabaseGrid />
				</Grid>
			</Border>
			<UXSettings:DatabaseList/> 
		</Grid>
	</Grid>
</UserControl>